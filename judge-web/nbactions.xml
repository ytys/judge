<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action>
        <actionName>CUSTOM-clean test</actionName>
        <displayName>clean test</displayName>
        <goals>
            <goal>clean</goal>
            <goal>test</goal>
        </goals>
    </action>
    <action>
        <actionName>CUSTOM-verify</actionName>
        <displayName>verify</displayName>
        <goals>
            <goal>verify</goal>
        </goals>
    </action>
    <action>
        <actionName>CUSTOM-spring-boot:run server.port=0</actionName>
        <displayName>spring-boot:run server.port=0</displayName>
        <goals>
            <goal>spring-boot:run</goal>
        </goals>
        <properties>
            <server.port>0</server.port>
            <debug/>
        </properties>
    </action>
    <action>
        <actionName>run</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
        </goals>
        <properties>
            <exec.args>-classpath %classpath com.github.zhanhb.judge.Application</exec.args>
            <exec.executable>java</exec.executable>
        </properties>
    </action>
    <action>
        <actionName>debug</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
        </goals>
        <properties>
            <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -classpath %classpath com.github.zhanhb.judge.Application</exec.args>
            <exec.executable>java</exec.executable>
            <jpda.listen>true</jpda.listen>
        </properties>
    </action>
    <action>
        <actionName>profile</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.2.1:exec</goal>
        </goals>
        <properties>
            <exec.args>-classpath %classpath com.github.zhanhb.judge.Application</exec.args>
            <exec.executable>java</exec.executable>
        </properties>
    </action>
</actions>
