<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action>
        <actionName>build</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>package</goal>
        </goals>
    </action>
    <action>
        <actionName>rebuild</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>clean</goal>
            <goal>package</goal>
        </goals>
    </action>
    <action>
        <actionName>build-with-dependencies</actionName>
        <reactor>also-make</reactor>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>package</goal>
        </goals>
    </action>
    <action>
        <actionName>clean</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>clean</goal>
            <goal>generate-sources</goal>
        </goals>
    </action>
    <action>
        <actionName>run</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>spring-boot:run</goal>
        </goals>
        <properties>
            <server.port>0</server.port>
            <server.context-path>/znoj</server.context-path>
        </properties>
    </action>
    <action>
        <actionName>debug</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>spring-boot:run</goal>
        </goals>
        <properties>
            <debug></debug>
            <server.port>0</server.port>
            <server.context-path>/znoj</server.context-path>
            <jpda.listen>maven</jpda.listen>
        </properties>
    </action>
    <action>
        <actionName>CUSTOM-sortpom:sort</actionName>
        <displayName>sortpom:sort</displayName>
        <goals>
            <goal>sortpom:sort</goal>
        </goals>
    </action>
    <action>
        <actionName>CUSTOM-build skip test</actionName>
        <displayName>build skip test</displayName>
        <goals>
            <goal>package</goal>
        </goals>
        <properties>
            <maven.test.skip>true</maven.test.skip>
        </properties>
    </action>
    <action>
        <actionName>CUSTOM-liquibase:diff</actionName>
        <displayName>liquibase:diff</displayName>
        <goals>
            <goal>compile</goal>
            <goal>liquibase:diff</goal>
        </goals>
    </action>
    <action>
        <actionName>CUSTOM-clean package maven.tesk.skip=true</actionName>
        <displayName>clean package maven.test.skip=true</displayName>
        <goals>
            <goal>clean</goal>
            <goal>package</goal>
        </goals>
        <properties>
            <maven.test.skip>true</maven.test.skip>
        </properties>
    </action>
    <action>
        <actionName>CUSTOM-generate-sources</actionName>
        <displayName>generate-sources</displayName>
        <goals>
            <goal>generate-sources</goal>
        </goals>
    </action>
    <action>
        <actionName>CUSTOM-test-compile surefire:test</actionName>
        <displayName>test-compile surefire:test</displayName>
        <goals>
            <goal>test-compile</goal>
            <goal>surefire:test</goal>
        </goals>
    </action>
    <action>
        <actionName>CUSTOM-deploy</actionName>
        <displayName>deploy</displayName>
        <packagings>
            <packaging>war</packaging>
            <packaging>ear</packaging>
            <packaging>ejb</packaging>
        </packagings>
        <goals>
            <goal>package</goal>
        </goals>
        <properties>
            <netbeans.deploy>true</netbeans.deploy>
        </properties>
    </action>
    <action>
        <actionName>test.single</actionName>
        <packagings>
            <packaging>*</packaging>
        </packagings>
        <goals>
            <goal>compile</goal>
            <goal>test-compile</goal>
            <goal>surefire:test</goal>
        </goals>
        <properties>
            <test>${packageClassName}</test>
        </properties>
    </action>
</actions>
